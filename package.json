{
  "name": "wnamecoin",
  "version": "0.1.0",
  "description": "Wrapped Namecoin.",
  "main": "contracts/NFTxPort.sol",
  "author": "Abid Omar<contact@wnamecoin.com>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=20.5.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "2.0.8",
    "@nomicfoundation/hardhat-ethers": "3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.6",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.6",
    "@nomicfoundation/hardhat-ledger": "1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "1.0.12",
    "@nomicfoundation/hardhat-toolbox": "5.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.11",
    "@nomiclabs/hardhat-solhint": "4.0.1",
    "@openzeppelin/cli": "2.8.2",
    "@openzeppelin/contracts": "5.0.2",
    "@openzeppelin/contracts-upgradeable": "5.0.2",
    "@openzeppelin/hardhat-upgrades": "3.5.0",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "5.0.0",
    "@types/mocha": "10.0.9",
    "@types/node": "22.7.5",
    "@typescript-eslint/eslint-plugin": "8.8.1",
    "@typescript-eslint/parser": "8.8.1",
    "chai": "4.3.7",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.11.1",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "7.1.0",
    "ethers": "6.13.4",
    "hardhat": "2.22.13",
    "hardhat-gas-reporter": "2.2.1",
    "prettier": "3.3.3",
    "prettier-plugin-solidity": "1.4.1",
    "solidity-coverage": "0.8.13",
    "solhint-plugin-prettier": "^0.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "ts-node": "10.9.2",
    "typechain": "8.3.2",
    "typescript": "5.5.4"
  },
  "scripts": {
    "build": "yarn clean; hardhat compile --config ./hardhat.config.ts;",
    "clean": "hardhat clean; hardhat clean --config ./hardhat.config.ts; forge clean; rm -rf coverage coverage.json hh-cache hh-cache-ref",
    "test": "yarn clean; hardhat test --config ./hardhat.config.ts",
    "profile": "yarn clean; REPORT_GAS=true hardhat test --config ./hardhat.config.ts;",
    "profile:nospec": "yarn clean; NO_SPECIALIZER=true REPORT_GAS=true hardhat test --config ./hardhat.config.ts",
    "coverage": "yarn clean; hardhat coverage --config ./hardhat-coverage.config.ts --solcoverjs ./config/.solcover.js",
    "lint:check": "yarn lint:check:format && yarn lint:check:solhint && yarn lint:check:eslint",
    "lint:check:format": "prettier --check **.{sol,js,ts}",
    "lint:check:solhint": "yarn build && solhint --config ./config/.solhint.json --ignore-path ./config/.solhintignore contracts/**/*.sol",
    "lint:check:eslint": "eslint .",
    "lint:fix": "yarn lint:fix:format && yarn lint:fix:eslint",
    "lint:fix:format": "prettier --write **.{sol,js,ts}",
    "lint:fix:eslint": "eslint --fix .",
    "deploy:hardhat": "yarn build && hardhat run scripts/deployProxy.ts --network hardhat --config ./hardhat.config.ts",
    "deploy:sepolia": "yarn build && hardhat run scripts/deployProxy.ts --network sepolia --config ./hardhat.config.ts",
    "upgrade:sepolia": "yarn build && hardhat run scripts/upgradeProxy.ts --network sepolia --config ./hardhat.config.ts",
    "deploy:goerli": "yarn build && hardhat run scripts/deployProxy.ts --network goerli --config ./hardhat.config.ts",
    "upgrade:goerli": "yarn build && hardhat run scripts/upgradeProxy.ts --network goerli --config ./hardhat.config.ts"
  },
  "lint-staged": {
    "*.sol": "prettier --write",
    "*.js": "prettier --write",
    "*.ts": "prettier --write"
  },
  "dependencies": {
    "dotenv": "16.4.5"
  }
}
